
<img src="/assets/burger.jpg" alt="burger">
<h1>Eat-Da-Burger!</h1>

<div class="container">
  <div class="row">
    <div class = "col md-6" id="newlyAdded">
      <h2 id="eat-ready">To Be DEVOURED!</h2>
        <ol>
          {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ol>
    </div>

    <div class="col md-6" id="eaten">
      <h2 id="ate">DEVOURED!</h2>
        <ol>
          {{#each burgers}}
            {{#if devoured}}
             <li>
                {{burger_name}}
                <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
              </li>
            {{/if}}
          {{/each}}
       </ol>
    </div>
  </div>
</div>

<div id = "formDiv">
  <h3>Add a Burger</h3>
  <form class="create-form">
    <div class="form-group">
      <label for="burger" id="nameLabel">Burger Name:</label>
      <input type="text" id="burger" name="burger_name">
    </div>
    <button type="submit" id="addBtn">Add Burger</button>
  </form>
</div>
