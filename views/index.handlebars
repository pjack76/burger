<div class="container">
  <h1>Eat-Da-Burger!</h1>
  <img src="/assets/burger.jpg" alt="burger">
</div>

<div class="box" id="newlyAdded">
  <h2>Burgers to be DEVOURED!</h2>
  <ol>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
      {{/unless}}
    {{/each}}
  </ol>
</div>

<div class="box" id="eaten">
  <h2>These burgers have already been DEVOURED!</h2>
  <ol>
    {{#each burgers}}
      {{#if devoured}}
        <li>
          {{burger_name}}
        </li>
      {{/if}}
    {{/each}}
  </ol>
</div>

<div id = "formDiv">
  <h3>Add a Burger</h3>
  <form class="create-form">
    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="burger_name">
    </div>
    <button type="submit">Add Burger</button>
  </form>
</div>
